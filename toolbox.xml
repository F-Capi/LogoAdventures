            <field name="REPEAT">1</field>
        </block>
    </category>
    <category name="Movement" colour="#4C97FF">
        <block type="fd">
            <field name="FD">50</field>
        </block>
        <block type="bk">
            <field name="BK">50</field>
        </block>
        <block type="rt">
            <field name="RT">90</field>
        </block>
        <block type="lt">
            <field name="LT">90</field>
        </block>
    </category>
    <category name="Drawing" colour="#9966FF">
        <block type="pu"></block>
        <block type="pd"></block>
        <block type="color">
            <field name="COLOR">16</field>
        </block>
        <block type="setpensize">
            <field name="setpensize">3</field>
        </block>
    </category>
  
</xml>

